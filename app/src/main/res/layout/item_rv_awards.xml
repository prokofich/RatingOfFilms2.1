<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="180dp"
        android:id="@+id/id_item_rv_awards_cs"
        android:background = "@drawable/background_cs_awards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="110dp"
            app:layout_constraintWidth_percent="0.15"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/oscar"
            android:id="@+id/id_item_rv_awards_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="OSCAR"
            android:textColor="@color/black"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintStart_toStartOf="@id/id_item_rv_awards_img"
            app:layout_constraintEnd_toEndOf="@id/id_item_rv_awards_img"
            app:layout_constraintTop_toBottomOf="@id/id_item_rv_awards_img"/>

        <TextView
            android:id="@+id/id_item_rv_awards_tv_name_film"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.45"
            android:layout_height="0dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:text="name"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@id/id_item_rv_awards_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/id_item_rv_awards_tv_name_awards"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            app:layout_constraintWidth_percent="0.7"
            android:background="@drawable/background_details_tv"
            app:layout_constraintStart_toEndOf="@id/id_item_rv_awards_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/id_item_rv_awards_tv_name_awards"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.45"
            android:textStyle="bold|italic"
            android:text="name"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/id_item_rv_awards_tv_name_film"
            app:layout_constraintStart_toEndOf="@id/id_item_rv_awards_img"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>